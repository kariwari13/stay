                alternatives: ['–æ–Ω–∞ —Å—Ç–∞–ª–∞ —É—á–∏—Ç–µ–ª–µ–º', '–æ–Ω–∞ —Å—Ç–∞–ª–∞ —É—á–∏—Ç–µ–ª—å–Ω–∏—Ü–µ–π'],
                verb: '—Å—Ç–∞–Ω–æ–≤–∏—Ç—å—Å—è-—Å—Ç–∞—Ç—å'
            },
            {
                type: 'translation_ru_en',
                category: 'stanovitsya',
                question: '–ü–µ—Ä–µ–≤–µ–¥–∏—Ç–µ: "–Ø —Å—Ç–∞–Ω—É –≤—Ä–∞—á–æ–º"',
                answer: 'i will become a doctor',
                alternatives: ['i will become a doctor'],
                verb: '—Å—Ç–∞–Ω–æ–≤–∏—Ç—å—Å—è-—Å—Ç–∞—Ç—å'
            },
            {
                type: 'multiple_choice',
                category: 'stanovitsya',
                question: '___ —Ç–µ–º–Ω–æ (It became dark)',
                options: ['–°—Ç–∞–ª–æ', '–û—Å—Ç–∞–ª–æ', '–û—Å—Ç–∞–Ω–æ–≤–∏–ª–æ—Å—å', '–°—Ç–∞–Ω–æ–≤–∏–ª–æ—Å—å'],
                correct: 0,
                verb: '—Å—Ç–∞–Ω–æ–≤–∏—Ç—å—Å—è-—Å—Ç–∞—Ç—å'
            },
            {
                type: 'fill_blanks',
                category: 'stanovitsya',
                question: '–ó–∞–ø–æ–ª–Ω–∏—Ç–µ: "–û–Ω ___ –≤—Å–µ –ª—É—á—à–µ"',
                answer: '—Å—Ç–∞–Ω–æ–≤–∏—Ç—Å—è',
                hint: '(imperfective, present tense)',
                verb: '—Å—Ç–∞–Ω–æ–≤–∏—Ç—å—Å—è-—Å—Ç–∞—Ç—å'
            },
            {
                type: 'translation_en_ru',
                category: 'stanovitsya',
                question: 'Translate: "The weather is getting colder"',
                answer: '–ø–æ–≥–æ–¥–∞ —Å—Ç–∞–Ω–æ–≤–∏—Ç—Å—è —Ö–æ–ª–æ–¥–Ω–µ–µ',
                alternatives: ['–ø–æ–≥–æ–¥–∞ —Å—Ç–∞–Ω–æ–≤–∏—Ç—Å—è —Ö–æ–ª–æ–¥–Ω–µ–µ', '—Å—Ç–∞–Ω–æ–≤–∏—Ç—Å—è —Ö–æ–ª–æ–¥–Ω–µ–µ'],
                verb: '—Å—Ç–∞–Ω–æ–≤–∏—Ç—å—Å—è-—Å—Ç–∞—Ç—å'
            },
            {
                type: 'situational',
                category: 'stanovitsya',
                question: '–°–∏—Ç—É–∞—Ü–∏—è: –í–∞—à –¥—Ä—É–≥ —Å–ø—Ä–∞—à–∏–≤–∞–µ—Ç –æ –≤–∞—à–∏—Ö –ø–ª–∞–Ω–∞—Ö –Ω–∞ –±—É–¥—É—â–µ–µ. –í—ã —Ö–æ—Ç–∏—Ç–µ –±—ã—Ç—å –∏–Ω–∂–µ–Ω–µ—Ä–æ–º.',
                context: '–†–∞—Å—Å–∫–∞–∂–∏—Ç–µ –æ —Å–≤–æ–µ–π –ø—Ä–æ—Ñ–µ—Å—Å–∏–∏ –≤ –±—É–¥—É—â–µ–º',
                expectedElements: ['—Å—Ç–∞–Ω—É', '–∏–Ω–∂–µ–Ω–µ—Ä–æ–º'],
                verb: '—Å—Ç–∞–Ω–æ–≤–∏—Ç—å—Å—è-—Å—Ç–∞—Ç—å'
            },
            {
                type: 'listening',
                category: 'stanovitsya',
                question: '–ü—Ä–æ—Å–ª—É—à–∞–π—Ç–µ –∏ –ø–æ–≤—Ç–æ—Ä–∏—Ç–µ: "–°—Ç–∞–Ω—å –Ω–∞ –º–µ—Å—Ç–æ!"',
                audio: '–°—Ç–∞–Ω—å –Ω–∞ –º–µ—Å—Ç–æ!',
                verb: '—Å—Ç–∞–Ω–æ–≤–∏—Ç—å—Å—è-—Å—Ç–∞—Ç—å'
            },
            {
                type: 'multiple_choice',
                category: 'stanovitsya',
                question: '–ú–æ–π –±—Ä–∞—Ç —Ö–æ—á–µ—Ç ___ –ø—Ä–æ–≥—Ä–∞–º–º–∏—Å—Ç–æ–º',
                options: ['—Å—Ç–∞—Ç—å', '–æ—Å—Ç–∞—Ç—å—Å—è', '–æ—Å—Ç–∞–Ω–æ–≤–∏—Ç—å—Å—è', '—Å—Ç–∞–Ω–æ–≤–∏—Ç—å—Å—è'],
                correct: 0,
                verb: '—Å—Ç–∞–Ω–æ–≤–∏—Ç—å—Å—è-—Å—Ç–∞—Ç—å'
            },

            // –°–ú–ï–®–ê–ù–ù–´–ï –ó–ê–î–ê–ù–ò–Ø (6 –∑–∞–¥–∞–Ω–∏–π)
            {
                type: 'multiple_choice',
                category: 'all',
                question: '–Ø —Ö–æ—á—É ___ –¥–æ–º–∞ –∏ –æ—Ç–¥–æ—Ö–Ω—É—Ç—å',
                options: ['–æ—Å—Ç–∞—Ç—å—Å—è', '–æ—Å—Ç–∞–Ω–æ–≤–∏—Ç—å—Å—è', '—Å—Ç–∞—Ç—å'],
                correct: 0,
                verb: 'mixed'
            },
            {
                type: 'multiple_choice',
                category: 'all',
                question: '–ú—ã ___ –≤ —Ü–µ–Ω—Ç—Ä–µ –≥–æ—Ä–æ–¥–∞, –≤ –≥–æ—Å—Ç–∏–Ω–∏—Ü–µ',
                options: ['–æ—Å—Ç–∞–Ω–æ–≤–∏–ª–∏—Å—å', '–æ—Å—Ç–∞–ª–∏—Å—å', '—Å—Ç–∞–ª–∏'],
                correct: 0,
                verb: 'mixed'
            },
            {
                type: 'multiple_choice',
                category: 'all',
                question: '–û–Ω ___ –∏–∑–≤–µ—Å—Ç–Ω—ã–º –∞–∫—Ç–µ—Ä–æ–º',
                options: ['—Å—Ç–∞–ª', '–æ—Å—Ç–∞–ª—Å—è', '–æ—Å—Ç–∞–Ω–æ–≤–∏–ª—Å—è'],
                correct: 0,
                verb: 'mixed'
            },
            {
                type: 'situational',
                category: 'all',
                question: '–í—ã–±–µ—Ä–∏—Ç–µ –ø—Ä–∞–≤–∏–ª—å–Ω—ã–π –≥–ª–∞–≥–æ–ª: –ú–∞—à–∏–Ω–∞ ___ –ø–µ—Ä–µ–¥ —à–∫–æ–ª–æ–π.',
                context: 'The car stopped in front of the school',
                expectedElements: ['–æ—Å—Ç–∞–Ω–æ–≤–∏–ª–∞—Å—å'],
                verb: 'mixed'
            },
            {
                type: 'situational',
                category: 'all',
                question: '–í—ã–±–µ—Ä–∏—Ç–µ –ø—Ä–∞–≤–∏–ª—å–Ω—ã–π –≥–ª–∞–≥–æ–ª: –î–µ—Ç–∏ ___ –¥–æ–º–∞ –æ–¥–Ω–∏.',
                context: 'The children remained home alone',
                expectedElements: ['–æ—Å—Ç–∞–ª–∏—Å—å'],
                verb: 'mixed'
            },
            {
                type: 'situational',
                category: 'all',
                question: '–í—ã–±–µ—Ä–∏—Ç–µ –ø—Ä–∞–≤–∏–ª—å–Ω—ã–π –≥–ª–∞–≥–æ–ª: –û–Ω–∞ ___ —Å—Ç—É–¥–µ–Ω—Ç–∫–æ–π —É–Ω–∏–≤–µ—Ä—Å–∏—Ç–µ—Ç–∞.',
                context: 'She became a university student',
                expectedElements: ['—Å—Ç–∞–ª–∞'],
                verb: 'mixed'
            }
        ];

        const generateRandomTask = () => {
            const filteredTasks = selectedCategory === 'all' 
                ? tasks 
                : tasks.filter(task => task.category === selectedCategory);
            
            const randomTask = filteredTasks[Math.floor(Math.random() * filteredTasks.length)];
            setCurrentTask({...randomTask, id: Date.now()});
            setUserAnswer('');
            setShowResult(null);
        };

        const checkAnswer = () => {
            if (!currentTask) return;
            
            let isCorrect = false;
            
            switch(currentTask.type) {
                case 'multiple_choice':
                    isCorrect = parseInt(userAnswer) === currentTask.correct;
                    break;
                case 'translation_ru_en':
                case 'translation_en_ru':
                case 'fill_blanks':
                    const normalizedAnswer = userAnswer.toLowerCase().trim();
                    if (currentTask.alternatives) {
                        isCorrect = currentTask.alternatives.some(alt => 
                            alt.toLowerCase() === normalizedAnswer
                        );
                    } else {
                        isCorrect = normalizedAnswer === currentTask.answer.toLowerCase();
                    }
                    break;
                case 'situational':
                    isCorrect = currentTask.expectedElements.some(element =>
                        userAnswer.toLowerCase().includes(element.toLowerCase())
                    );
                    break;
                default:
                    isCorrect = true;
            }
            
            setScore(prev => ({
                correct: prev.correct + (isCorrect ? 1 : 0),
                total: prev.total + 1
            }));
            
            setShowResult(isCorrect);
        };

        const speakText = (text) => {
            if ('speechSynthesis' in window) {
                window.speechSynthesis.cancel();
                
                const utterance = new SpeechSynthesisUtterance(text);
                utterance.lang = 'ru-RU';
                utterance.rate = 0.7;
                utterance.pitch = 1.0;
                utterance.volume = 1.0;
                
                const setVoice = () => {
                    const voices = window.speechSynthesis.getVoices();
                    
                    const preferredVoices = [
                        voices.find(voice => voice.name.toLowerCase().includes('google') && voice.lang.startsWith('ru')),
                        voices.find(voice => voice.name.toLowerCase().includes('microsoft') && voice.lang.startsWith('ru')),
                        voices.find(voice => voice.name.toLowerCase().includes('irina') && voice.lang.startsWith('ru')),
                        voices.find(voice => voice.name.toLowerCase().includes('pavel') && voice.lang.startsWith('ru')),
                        voices.find(voice => voice.lang === 'ru-RU'),
                        voices.find(voice => voice.lang.startsWith('ru'))
                    ];
                    
                    const selectedVoice = preferredVoices.find(voice => voice !== undefined);
                    
                    if (selectedVoice) {
                        utterance.voice = selectedVoice;
                    }
                    
                    try {
                        window.speechSynthesis.speak(utterance);
                    } catch (error) {
                        console.error('Speech synthesis error:', error);
                    }
                };
                
                if (window.speechSynthesis.getVoices().length > 0) {
                    setVoice();
                } else {
                    window.speechSynthesis.onvoiceschanged = () => {
                        setVoice();
                        window.speechSynthesis.onvoiceschanged = null;
                    };
                    
                    setTimeout(() => {
                        if (window.speechSynthesis.getVoices().length === 0) {
                            window.speechSynthesis.speak(utterance);
                        }
                    }, 1000);
                }
            }
        };

        const startRecording = async () => {
            if (!('webkitSpeechRecognition' in window) && !('SpeechRecognition' in window)) {
                alert('–í–∞—à –±—Ä–∞—É–∑–µ—Ä –Ω–µ –ø–æ–¥–¥–µ—Ä–∂–∏–≤–∞–µ—Ç —Ä–∞—Å–ø–æ–∑–Ω–∞–≤–∞–Ω–∏–µ —Ä–µ—á–∏. –ü–æ–ø—Ä–æ–±—É–π—Ç–µ Chrome –∏–ª–∏ Edge.');
                return;
            }

            try {
                const SpeechRecognition = window.SpeechRecognition || window.webkitSpeechRecognition;
                const recognition = new SpeechRecognition();
                
                recognition.lang = 'ru-RU';
                recognition.continuous = false;
                recognition.interimResults = false;
                recognition.maxAlternatives = 3;
                
                recognition.onstart = () => {
                    setIsRecording(true);
                    setUserAnswer('–ì–æ–≤–æ—Ä–∏—Ç–µ...');
                };
                
                recognition.onresult = (event) => {
                    const transcript = event.results[0][0].transcript.trim();
                    setUserAnswer(transcript);
                    setIsRecording(false);
                    
                    if (currentTask && currentTask.type === 'listening') {
                        setTimeout(() => {
                            checkAnswer();
                        }, 1000);
                    }
                };
                
                recognition.onerror = (event) => {
                    setIsRecording(false);
                    
                    let errorMessage = '–û—à–∏–±–∫–∞ —Ä–∞—Å–ø–æ–∑–Ω–∞–≤–∞–Ω–∏—è —Ä–µ—á–∏. ';
                    switch(event.error) {
                        case 'no-speech':
                            errorMessage += '–†–µ—á—å –Ω–µ –æ–±–Ω–∞—Ä—É–∂–µ–Ω–∞. –ü–æ–ø—Ä–æ–±—É–π—Ç–µ –≥–æ–≤–æ—Ä–∏—Ç—å –≥—Ä–æ–º—á–µ.';
                            break;
                        case 'audio-capture':
                            errorMessage += '–ú–∏–∫—Ä–æ—Ñ–æ–Ω –Ω–µ–¥–æ—Å—Ç—É–ø–µ–Ω.';
                            break;
                        case 'not-allowed':
                            errorMessage += '–î–æ—Å—Ç—É–ø –∫ –º–∏–∫—Ä–æ—Ñ–æ–Ω—É –∑–∞–ø—Ä–µ—â—ë–Ω.';
                            break;
                        default:
                            errorMessage += '–ü–æ–ø—Ä–æ–±—É–π—Ç–µ –µ—â—ë —Ä–∞–∑.';
                    }
                    setUserAnswer(errorMessage);
                };
                
                recognition.onend = () => {
                    setIsRecording(false);
                };
                
                recognition.start();
                
            } catch (error) {
                setIsRecording(false);
                setUserAnswer('–ù–µ —É–¥–∞–ª–æ—Å—å –∑–∞–ø—É—Å—Ç–∏—Ç—å —Ä–∞—Å–ø–æ–∑–Ω–∞–≤–∞–Ω–∏–µ —Ä–µ—á–∏');
            }
        };

        useEffect(() => {
            generateRandomTask();
        }, [selectedCategory]);

        const renderTask = () => {
            if (!currentTask) return null;

            switch(currentTask.type) {
                case 'multiple_choice':
                    return (
                        <div className="space-y-4">
                            <p className="text-lg font-medium">{currentTask.question}</p>
                            <div className="grid grid-cols-1 gap-2">
                                {currentTask.options.map((option, index) => (
                                    <button
                                        key={index}
                                        onClick={() => setUserAnswer(index.toString())}
                                        className={`p-3 border rounded-lg transition-colors text-left ${
                                            userAnswer === index.toString()
                                                ? 'bg-blue-500 text-white border-blue-600'
                                                : 'bg-white hover:bg-gray-50 border-gray-300'
                                        }`}
                                    >
                                        {option}
                                    </button>
                                ))}
                            </div>
                        </div>
                    );
                
                case 'listening':
                    return (
                        <div className="space-y-4">
                            <p className="text-lg font-medium">{currentTask.question}</p>
                            <button
                                onClick={() => speakText(currentTask.audio)}
                                className="flex items-center gap-2 bg-green-500 text-white px-4 py-2 rounded-lg hover:bg-green-600"
                            >
                                <VolumeIcon size={20} />
                                –ü—Ä–æ—Å–ª—É—à–∞—Ç—å
                            </button>
                            <div className="flex items-center gap-2">
                                <button
                                    onClick={isRecording ? () => {} : startRecording}
                                    className={`flex items-center gap-2 px-4 py-2 rounded-lg ${
                                        isRecording 
                                            ? 'bg-red-500 hover:bg-red-600' 
                                            : 'bg-blue-500 hover:bg-blue-600'
                                    } text-white`}
                                >
                                    {isRecording ? <MicOffIcon size={20} /> : <MicIcon size={20} />}
                                    {isRecording ? '–°–ª—É—à–∞—é...' : '–ó–∞–ø–∏—Å–∞—Ç—å –æ—Ç–≤–µ—Ç'}
                                </button>
                            </div>
                            {userAnswer && !isRecording && (
                                <div className="bg-gray-100 p-3 rounded-lg">
                                    <p className="text-sm text-gray-600">–í–∞—à –æ—Ç–≤–µ—Ç:</p>
                                    <p className="font-medium">{userAnswer}</p>
                                </div>
                            )}
                        </div>
                    );
                
                case 'situational':
                    return (
                        <div className="space-y-4">
                            <div className="bg-yellow-50 p-4 rounded-lg border border-yellow-200">
                                <h3 className="font-semibold text-yellow-800 mb-2">–°–∏—Ç—É–∞—Ü–∏—è:</h3>
                                <p className="text-yellow-700">{currentTask.question}</p>
                                {currentTask.context && (
                                    <p className="text-sm text-yellow-600 mt-2">
                                        {currentTask.context}
                                    </p>
                                )}
                            </div>
                            <textarea
                                value={userAnswer}
                                onChange={(e) => setUserAnswer(e.target.value)}
                                placeholder="–í–≤–µ–¥–∏—Ç–µ –≤–∞—à –æ—Ç–≤–µ—Ç..."
                                className="w-full p-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500"
                                rows="3"
                            />
                        </div>
                    );
                
                default:
                    return (
                        <div className="space-y-4">
                            <p className="text-lg font-medium">{currentTask.question}</p>
                            {currentTask.hint && (
                                <p className="text-sm text-gray-600">{currentTask.hint}</p>
                            )}
                            <input
                                type="text"
                                value={userAnswer}
                                onChange={(e) => setUserAnswer(e.target.value)}
                                placeholder="–í–≤–µ–¥–∏—Ç–µ –≤–∞—à –æ—Ç–≤–µ—Ç..."
                                className="w-full p-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500"
                                onKeyPress={(e) => e.key === 'Enter' && checkAnswer()}
                            />
                            <div className="flex gap-2">
                                <button
                                    onClick={isRecording ? () => {} : startRecording}
                                    className={`flex items-center gap-2 px-4 py-2 rounded-lg ${
                                        isRecording 
                                            ? 'bg-red-500 hover:bg-red-600' 
                                            : 'bg-blue-500 hover:bg-blue-600'
                                    } text-white`}
                                >
                                    {isRecording ? <MicOffIcon size={20} /> : <MicIcon size={20} />}
                                    –ì–æ–ª–æ—Å–æ–≤–æ–π –æ—Ç–≤–µ—Ç
                                </button>
                            </div>
                        </div>
                    );
            }
        };

        const renderVocabulary = () => (
            <div className="space-y-6">
                {Object.entries(vocabulary).map(([category, words]) => (
                    <div key={category} className="bg-white rounded-lg p-6 shadow-sm border border-gray-200">
                        <h3 className="text-xl font-semibold mb-4 text-blue-600">
                            {category === 'ostavatsya' ? 'üè† –û—Å—Ç–∞–≤–∞—Ç—å—Å—è-–æ—Å—Ç–∞—Ç—å—Å—è (to remain, to stay)' :
                             category === 'ostanavlivatsya' ? '‚è∏Ô∏è –û—Å—Ç–∞–Ω–∞–≤–ª–∏–≤–∞—Ç—å—Å—è-–æ—Å—Ç–∞–Ω–æ–≤–∏—Ç—å—Å—è (to stop)' :
                             '‚ú® –°—Ç–∞–Ω–æ–≤–∏—Ç—å—Å—è-—Å—Ç–∞—Ç—å (to become)'}
                        </h3>
                        <div className="grid gap-4">
                            {Object.entries(words).map(([word, info]) => (
                                <div key={word} className="border-l-4 border-blue-200 pl-4">
                                    <div className="flex items-center justify-between mb-2">
                                        <h4 className="font-semibold text-lg">{word}</h4>
                                        <button
                                            onClick={() => speakText(word)}
                                            className="text-blue-500 hover:text-blue-700 transition-colors"
                                        >
                                            <VolumeIcon size={20} />
                                        </button>
                                    </div>
                                    <p className="text-gray-700 mb-3">{info.definition}</p>
                                    
                                    <div className="mb-3">
                                        <h5 className="font-medium text-sm text-gray-600 mb-2">–ü—Ä–∏–º–µ—Ä—ã:</h5>
                                        <div className="space-y-2">
                                            {info.examples.map((example, index) => (
                                                <div key={index} className="flex items-start gap-2">
                                                    <button
                                                        onClick={() => speakText(example.split(' (')[0])}
                                                        className="text-green-600 hover:text-green-800 transition-colors mt-1 flex-shrink-0"
                                                    >
                                                        <VolumeIcon size={16} />
                                                    </button>
                                                    <p className="text-green-700">{example}</p>
                                                </div>
                                            ))}
                                        </div>
                                    </div>
                                    
                                    <div>
                                        <h5 className="font-medium text-sm text-gray-600 mb-2">–ß–∞—Å—Ç–æ –∏—Å–ø–æ–ª—å–∑—É–µ–º—ã–µ –∫–æ–Ω—Å—Ç—Ä—É–∫—Ü–∏–∏:</h5>
                                        <div className="flex flex-wrap gap-2">
                                            {info.constructions.map((construction, index) => (
                                                <div key={index} className="flex items-center gap-1 bg-blue-50 px-3 py-1 rounded-full">
                                                    <span className="text-sm text-blue-700">{construction}</span>
                                                    <button
                                                        onClick={() => speakText(construction.split(' (')[0])}
                                                        className="text-blue-500 hover:text-blue-700"
                                                    >
                                                        <VolumeIcon size={12} />
                                                    </button>
                                                </div>
                                            ))}
                                        </div>
                                    </div>
                                </div>
                            ))}
                        </div>
                    </div>
                ))}
            </div>
        );

        return (
            <div className="max-w-4xl mx-auto bg-gray-50 min-h-screen">
                <div className="bg-gradient-to-r from-blue-600 to-blue-700 text-white p-6 shadow-lg">
                    <h1 className="text-2xl font-bold flex items-center gap-2">
                        <BookIcon size={28} />
                        –û—Å—Ç–∞–≤–∞—Ç—å—Å—è vs –û—Å—Ç–∞–Ω–∞–≤–ª–∏–≤–∞—Ç—å—Å—è vs –°—Ç–∞–Ω–æ–≤–∏—Ç—å—Å—è
                    </h1>
                    <p className="mt-2 opacity-90">
                        –£—á–∏–º—Å—è —Ä–∞–∑–ª–∏—á–∞—Ç—å –ø–æ—Ö–æ–∂–∏–µ –≥–ª–∞–≥–æ–ª—ã
                    </p>
                    <div className="mt-4 flex gap-4 text-sm bg-white/10 rounded-lg p-3">
                        <span>–ü—Ä–∞–≤–∏–ª—å–Ω–æ: {score.correct}</span>
                        <span>–í—Å–µ–≥–æ: {score.total}</span>
                        <span>–¢–æ—á–Ω–æ—Å—Ç—å: {score.total > 0 ? Math.round((score.correct / score.total) * 100) : 0}%</span>
                    </div>
                </div>

                <div className="flex border-b bg-white shadow-sm">
                    <button
                        onClick={() => setActiveTab('tasks')}
                        className={`flex-1 p-4 text-center font-medium transition-colors ${
                            activeTab === 'tasks' 
                                ? 'border-b-2 border-blue-500 text-blue-600 bg-blue-50' 
                                : 'text-gray-600 hover:text-gray-800 hover:bg-gray-50'
                        }`}
                    >
                        <ListIcon className="mx-auto mb-1" size={20} />
                        –ó–∞–¥–∞–Ω–∏—è
                    </button>
                    <button
                        onClick={() => setActiveTab('vocabulary')}
                        className={`flex-1 p-4 text-center font-medium transition-colors ${
                            activeTab === 'vocabulary' 
                                ? 'border-b-2 border-blue-500 text-blue-600 bg-blue-50' 
                                : 'text-gray-600 hover:text-gray-800 hover:bg-gray-50'
                        }`}
                    >
                        <BookIcon className="mx-auto mb-1" size={20} />
                        –°–ª–æ–≤–∞—Ä—å
                    </button>
                </div>

                <div className="p-6">
                    {activeTab === 'tasks' && (
                        <div className="space-y-6">
                            <div className="flex gap-2 flex-wrap">
                                <button
                                    onClick={() => setSelectedCategory('all')}
                                    className={`px-4 py-2 rounded-lg transition-colors ${
                                        selectedCategory === 'all' 
                                            ? 'bg-blue-500 text-white shadow-md' 
                                            : 'bg-white border border-gray-300 hover:bg-gray-50'
                                    }`}
                                >
                                    –í—Å–µ –∫–∞—Ç–µ–≥–æ—Ä–∏–∏
                                </button>
                                <button
                                    onClick={() => setSelectedCategory('ostavatsya')}
                                    className={`px-4 py-2 rounded-lg transition-colors ${
                                        selectedCategory === 'ostavatsya' 
                                            ? 'bg-blue-500 text-white shadow-md' 
                                            : 'bg-white border border-gray-300 hover:bg-gray-50'
                                    }`}
                                >
                                    üè† –û—Å—Ç–∞–≤–∞—Ç—å—Å—è-–æ—Å—Ç–∞—Ç—å—Å—è
                                </button>
                                <button
                                    onClick={() => setSelectedCategory('ostanavlivatsya')}
                                    className={`px-4 py-2 rounded-lg transition-colors ${
                                        selectedCategory === 'ostanavlivatsya' 
                                            ? 'bg-blue-500 text-white shadow-md' 
                                            : 'bg-white border border-gray-300 hover:bg-gray-50'
                                    }`}
                                >
                                    ‚è∏Ô∏è –û—Å—Ç–∞–Ω–∞–≤–ª–∏–≤–∞—Ç—å—Å—è-–æ—Å—Ç–∞–Ω–æ–≤–∏—Ç—å—Å—è
                                </button>
                                <button
                                    onClick={() => setSelectedCategory('stanovitsya')}
                                    className={`px-4 py-2 rounded-lg transition-colors ${
                                        selectedCategory === 'stanovitsya' 
                                            ? 'bg-blue-500 text-white shadow-md' 
                                            : 'bg-white border border-gray-300 hover:bg-gray-50'
                                    }`}
                                >
                                    ‚ú® –°—Ç–∞–Ω–æ–≤–∏—Ç—å—Å—è-—Å—Ç–∞—Ç—å
                                </button>
                            </div>

                            <div className="bg-white rounded-lg p-6 shadow-sm border border-gray-200">
                                {showResult !== null && (
                                    <div className={`mb-4 p-4 rounded-lg flex items-center gap-2 ${
                                        showResult 
                                            ? 'bg-green-100 text-green-800 border border-green-300' 
                                            : 'bg-red-100 text-red-800 border border-red-300'
                                    }`}>
                                        {showResult ? <CheckIcon size={20} /> : <XIcon size={20} />}
                                        <span className="font-medium">
                                            {showResult ? '–ü—Ä–∞–≤–∏–ª—å–Ω–æ! üéâ' : `–ù–µ–ø—Ä–∞–≤–∏–ª—å–Ω–æ. –ü—Ä–∞–≤–∏–ª—å–Ω—ã–π –æ—Ç–≤–µ—Ç: ${currentTask?.answer || '—Å–º. –≤–∞—Ä–∏–∞–Ω—Ç—ã –≤—ã—à–µ'}`}
                                        </span>
                                    </div>
                                )}
                                
                                {renderTask()}
                                
                                {currentTask && (
                                    <div className="mt-6 flex gap-3">
                                        {showResult === null ? (
                                            <button
                                                onClick={checkAnswer}
                                                disabled={!userAnswer.trim() || isRecording}
                                                className="bg-green-500 text-white px-6 py-2 rounded-lg hover:bg-green-600 disabled:bg-gray-400 disabled:cursor-not-allowed transition-colors font-medium"
                                            >
                                                –ü—Ä–æ–≤–µ—Ä–∏—Ç—å
                                            </button>
                                        ) : (
                                            <button
                                                onClick={generateRandomTask}
                                                className="bg-blue-500 text-white px-6 py-2 rounded-lg hover:bg-blue-600 flex items-center gap-2 transition-colors font-medium"
                                            >
                                                <RefreshIcon size={16} />
                                                –°–ª–µ–¥—É—é—â–µ–µ –∑–∞–¥–∞–Ω–∏–µ
                                            </button>
                                        )}
                                        <button
                                            onClick={generateRandomTask}
                                            className="bg-gray-500 text-white px-6 py-2 rounded-lg hover:bg-gray-600 flex items-center gap-2 transition-colors"
                                        >
                                            <RefreshIcon size={16} />
                                            –ù–æ–≤–æ–µ –∑–∞–¥–∞–Ω–∏–µ
                                        </button>
                                    </div>
                                )}
                            </div>

                            {currentTask?.verb && (
                                <div className="bg-blue-50 rounded-lg p-4 border border-blue-200">
                                    <h3 className="font-semibold text-blue-800 mb-2">–ò–∑—É—á–∞–µ–º—ã–π –≥–ª–∞–≥–æ–ª:</h3>
                                    <div className="text-blue-700">
                                        <p className="font-medium">{currentTask.verb}</p>
                                    </div>
                                </div>
                            )}
                        </div>
                    )}

                    {activeTab === 'vocabulary' && renderVocabulary()}
                </div>
            </div>
        );
    };

    ReactDOM.render(React.createElement(RussianVerbsApp), document.getElementById('root'));
</script>
